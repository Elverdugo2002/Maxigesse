MDScreen:
    name:"type facture"
#======================title==================================
    MDFloatLayout:
        Image:
            source:"image/image login.jpg"
            pos_hint:{"center_x":.5,"center_y":.5}
            size_hint:5,5
            #width:"700 dp"
            #height:"700 dp"
        Image:
            source:"image/logo dark.png"
            pos_hint:{"center_x":.5,"center_y":.8}
            #size_hint:5,5
            #width:"700 dp"
            #height:"700 dp"
    MDFloatLayout:
        orientation:'vertical'
        size_hint_y:.1
        pos_hint:{"top":1}
        md_bg_color:'#D03241'
        MDLabel:
            text:"Le type de la Facture"
            pos_hint:{'center_x':.6,"center_y":.5}
            color: "white"
            font_size:34
            font_name:"MPoppins"
        MDIconButton:
            icon:"arrow-left"
            pos_hint:{"center_y":.5}
            on_release:
                root.manager.transition.direction = "down"
                root.manager.current = "gestion facture"
#========================================================bouton=========================================
    MDCard:
        size_hint:.95,.44
        orientation:"vertical"
        spacing:10
        padding:10
        pos_hint:{"center_x":.5,"center_y":.55}
        radius:[2]
        MDFloatLayout:
            size_hint_y:.2
            pos_hint:{"center_x":.5,"center_y":.5}
            MDLabel:
                text:"Choisir un type une facture"
                font_size:'20sp'
                halign:"center"
                pos_hint:{"center_x":.5,"center_y":.95}
                md_text_color:"blue"
                elevation: 3
                bold:True
            MDRaisedButton:
                text:"Facture societe national"
                size_hint:.45,.4
                halign:"center"

                pos_hint:{"center_x":.26,"center_y":.65}
                text_color:"blue"
                elevation: 3
                on_release:
                    root.manager.transition.direction = "up"
                    root.manager.current = "ajouter facture"

            MDRaisedButton:
                text:"Facture societe priver"
                size_hint:.45,.4
                halign:"center"
                pos_hint:{"center_x":.78,"center_y":.65}
                text_color:"blue"
                elevation: 3
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "ajouter facture priver"

#=================================================MDBottomNavigation===========================
    MDBoxLayout:
        size_hint:1,.1
        md_bg_color:"white"
        radius:[10,10,0,0]
        MDBoxLayout:
            orientation:'vertical'
            #md_bg_color:'red'
            MDIconButton:
                icon:"home"
                theme_icon_color:'Custom'
                icon_color:'blue'
                pos_hint:{"center_x":.5,"center_y":.5}
                on_release:
                    root.manager.transition.direction = "up"
                    root.manager.current = "accueil admin"
            MDLabel:
                text:"Accueil"
                color:'blue'
                valign:'center'
                halign:"center"
        MDBoxLayout:
            orientation:'vertical'
            MDIconButton:
                icon:"account"
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "profile admin"
                pos_hint:{"center_x":.5,"center_y":.5}
            MDLabel:
                text:"Profile"
                valign:'center'
                halign:"center"